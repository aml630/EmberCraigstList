
<button {{action 'costSort'}} class = "btn btn-danger">Sort By Cost</button>
<button {{action 'dateSort'}} class = "btn btn-info">Sort By Date</button>

{{#if cost}}
{{#each costSortedHouses as |house|}}
<div class = "section">
<br />
{{#link-to 'house' house.id}}Rooms: {{house.rooms}}{{/link-to}}
<br />
Cost: {{house.cost}}{{house-popularity house}}
<br />
Date Posted: {{house.date}}
<br />
<button class = "btn btn-warning"{{action 'delete' house}}>Delete</button>

</div>
{{/each}}
{{/if}}

{{#if date}}
{{#each dateSortedHouses as |house|}}
<div class = "section">
<br />
Rooms: {{house.rooms}}
<br />
Cost: {{house.cost}}{{house-popularity house}}
<br />
Date Posted: {{house.date}}
<br />
<button class = "btn btn-warning"{{action 'delete' house}}>Delete</button>
</div>
{{/each}}
{{/if}}
